!!!
%html
  %head
    %title A New Kind of Music
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          = link_to "A New Kind of Music", root_path, class: "brand"

          - if user_signed_in?
            %ul.nav.pull-right
              %li.dropdown
                =link_to '#', class: 'dropdown-toggle', data: {dropdown: 'dropdown', toggle: 'dropdown'} do
                  #{current_user.first_name.titleize}
                  %i.icon-white.icon-chevron-down

                %ul.dropdown-menu
                  %li
                    =link_to root_path do
                      %i.icon-home
                      My Home
                  .divider
                  %li
                    =link_to edit_registration_path(current_user) do
                      %i.icon-edit
                      Edit Account
                  .divider
                  %li
                    =link_to destroy_user_session_path, method: :delete do
                      %i.icon-off
                      Log Out 


    .main-container
      = render "shared/flash_message"

      = yield

